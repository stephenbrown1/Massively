
{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Main --}}
<main id="main">
	{{#post}}
	<div id="maincontent" style="">
        <header class="major">
            <h1>{{title}}</h1>
        </header>
    
        {{content}}

    </div>
    {{/post}}

    {{!-- Posts --}}
    <h2>Recent posts</h2>
    <section class="posts">
    {{#get "posts" filter="featured:false" limit="2" as |a_post|}}
        
        {{#foreach a_post}}
        <article>
            <header>
                <span class="date">{{date format="MMM D, YYYY"}}</span>
                <h2><a href="{{url}}">{{title}}</a></h2>
            </header>
            {{#if feature_image}}
            <a href="{{url}}" class="image fit"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
            {{/if}}
            <p>{{excerpt words="33"}}</p>
            <ul class="actions special">
                <li><a href="{{url}}" class="button">Full Story</a></li>
            </ul>
        </article>
        {{/foreach}}
    {{/get}}

    </section>
 

</main>